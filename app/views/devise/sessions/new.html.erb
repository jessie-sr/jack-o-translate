<div class="d-flex justify-content-center align-items-center">
  <div class="auth-container text-center mt-5">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="field mt-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field mt-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>


      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-dark', style: 'width: 185px;'%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

