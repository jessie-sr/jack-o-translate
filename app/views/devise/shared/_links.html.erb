<%- if controller_name != 'sessions' %>
  <%= link_to "Have an account?", new_session_path(resource_name), class: 'text-secondary small' %><br />
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="row">
    <div class="col-sm-3 text-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-secondary small' %>
    </div>

    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="col-sm-8 text-right ml-4">
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'text-secondary small' %>
      </div>
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name == 'registrations' %>
  <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name), class: 'text-secondary small' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
<hr class="mt-2 mb-3">
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn btn-light', style: 'width: 280px;' do %>
      <%= image_tag('google-icon.png', size: "18x18", alt: "Google icon") %>  Sign in with Google
    <% end %><br />
  <% end %>
<% end %>
