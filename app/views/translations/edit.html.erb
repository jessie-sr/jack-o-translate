<%# app/views/translations/edit.html.erb %>

<div class="container mt-4">
  <h4 class="font-weight-bold mb-3">Edit Translation</h4>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissible fade show" role="alert">
      <%= value %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= form_with model: @translation, local: true do |form| %>

    <div class="card card-white">
      <div class="card-body">
      
        <div class="mb-3">
          <%= form.label :input_text, 'What would you like to translate today?', class: 'col-form-label font-weight-bold' %>
          <%= form.text_field :input_text, class: 'form-control custom-text-field' %>
        </div>

        <div class="mb-3">
          <%= form.label :language, 'Which language are we translating to?', class: 'col-form-label font-weight-bold' %>
          <%= form.text_field :language, class: 'form-control custom-text-field' %>
        </div>

        <div class="mb-3">
          <%= form.label :tone, 'How should your translation feel? ', class: 'col-form-label font-weight-bold' %>
          <%= form.text_field :tone, class: 'form-control custom-text-field' %>
        </div>

        <div class="mb-3">
          <%= form.label :context, 'Let\'s set the scene!', class: 'col-form-label font-weight-bold' %>
          <%= form.text_field :context, class: 'form-control custom-text-field' %>
        </div>

      </div>
    </div>

    <div class="mt-4 text-right">
      <%= form.submit 'Update', class: 'btn btn-dark col-2 mr-2' %> 
      <%= link_to 'Cancel', translations_path, class: 'btn btn-secondary col-2' %>
    </div>
      
  <% end %>
</div>