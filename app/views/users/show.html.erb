<%# app/views/users/show.html.erb %>

<div class="container">
    <div class="page-inner no-page-title">
        <div id="main-wrapper">
            <div class="row">
                <div class="col-lg-5 col-xl-3">
                    <div class="card card-white grid-margin text-center">
                        <div class="card-body user-profile-card mb-3">
                            <div class="py-4">
                                <% if @user.profile_image.attached? %>
                                  <%= image_tag(@user.profile_image, alt: "Profile Image", class: "rounded-circle", style: "height: 150px; width: 150px;") %>
                                <% else %>
                                  <%= image_tag('default-profile.png', alt: 'Default profile', class: "rounded-circle", style: "height: 150px; width: 150px;") %>
                                <% end %>
                            </div>
                            <h4 class="text-center h6 mt-2"><%= @user.username %></h4>
                            <p class="text-center small">Email: <%= @user.email %></p>
                            <!-- Centered Follow and Message buttons -->
                            <div class="row justify-content-center mb-2">
                                <div class="col-auto">
                                    <button class="btn btn-theme btn-sm">Follow</button>
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-theme btn-sm">Message</button>
                                </div>
                            </div>

                            <!-- Edit Profile button on its own row with specific width -->
                            <div class="row mb-2">
                                <div class="col-12">
                                    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-dark w-100' %>
                                </div>
                            </div>

                            <!-- Back button on its own row with specific width -->
                            <div class="row">
                                <div class="col-12">
                                    <%= link_to 'Back', root_path, class: 'btn btn-secondary w-100' %>
                                </div>
                            </div>
                         </div>    
                    </div>
                </div>

                <div class="col-lg-7 col-xl-6">
                    <div class="card card-white grid-margin">
                        <div class="card-body">
                            <div class="post">
                            </div>
                        </div>
                    </div>

                    <div class="card card-white grid-margin">
                        <div class="card-body">
                            <div class="post">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-xl-3">
                    <div class="card card-white grid-margin">
                        <div class="card-heading clearfix">
                            <h4 class="card-title">Suggestions</h4>
                        </div>
                        <div class="card-body">
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
    </div>
</div>
